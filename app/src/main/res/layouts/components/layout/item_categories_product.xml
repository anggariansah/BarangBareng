<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="categories"
            type="com.barangbareng.models.Categories" />
    </data>

    <LinearLayout
        android:id="@+id/linear_item_categories_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacer_normal"
        android:layout_marginEnd="@dimen/spacer_small"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_icon_categories"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_category_electronic" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/SourceSansProTextRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacer_small"
            android:text="@{categories.title}"
            android:textAlignment="center"
            android:textColor="#424242"
            android:textStyle="bold" />

    </LinearLayout>

</layout>