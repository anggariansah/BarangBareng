<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barangbareng">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BarangBarengApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.BarangBareng">
        <activity
            android:name=".screens.main.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.MainActivity" />
        <activity android:name=".screens.product.SearchProductActivity" />
        <activity android:name=".screens.product.ProductDetailActivity" />
        <activity android:name=".screens.product.CategoryProductActivity" />
    </application>

</manifest>